<div>
  <label>Title</label>
  <input type="text" name="title" value="<%= book.title %>">
</div>
<div><br>
  <label>Author</label>
  <select name="author">
    <% authors.forEach(author => { %>
      <% if (author.id === book.author) { %>
        <option selected label="<%= author.name %>" value="<%= author.id %>">
      <% } else { %>
        <option label="<%= author.name %>" value="<%= author.id %>">
      <% } %>
    <% }) %>
  </select>
</div>
<br><div>
  <label>Summary</label>
  <textarea type="text" name="summary"><%= book.summary %></textarea>
</div>
<div>
  <label>ISBN</label>
  <textarea type="text" name="isbn"><%= book.isbn %></textarea>
</div>
